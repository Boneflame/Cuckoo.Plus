{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/dist/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2015", "dom"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/interface"
  ]
}
